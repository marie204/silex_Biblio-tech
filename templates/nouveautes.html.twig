{% extends "layout.html.twig" %}

{% block content %}
<div class="global">
<section class="popularBox">
<div class="container">
    <div class="row">
        <article class="col-lg-12 col-md-12 col-sm-12 banner-box">
            <h3>Les nouveautes</h3>
            <div class="row">
                {% for livre in livres|reverse %}
                <article class="col-lg-3 col-md-4 col-sm-4 col-xs-6">
                    <div class="thumb-pad"><div class="box_inner">
                        <div class="thumbnail">
                            <figure><a href="./livre?id={{ livre.id }}"><img class="img-fluid" src="{{ livre.image }}" alt="Titre du livre" style=" height: 400px; width: 270px"></a></figure>
                            <div class="caption">
                                <a href="./accueil">{{ livre.title }}</a>
                                <p class="title">by {{ livre.auteur }}</p>
                            </div>
                        </div>
                    </div></div>
                </article>
                {% endfor %}
            </div>
        </article>
    </div>
</div>
</section>

</div>
{% endblock %}