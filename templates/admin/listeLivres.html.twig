{% extends "alayout.html.twig" %}
{% block content %}
	<div class="container">
		<div class="row">
			<div class="col s12 m12 l12">
				<p>Il y a: {{ livres|length }} livres dans la base.</p>
			</div>
		</div>{# ROW #}
			<div class="row">
				<div class="col l12">
					<table id="myTable" class="striped">
						<thead>
							<tr>
								<th>Photo</th>
								<th>Titre</th>
								<th>Auteur</th>
								<th>Date d'ajout</th>
								<th>ISBN</th>
							</tr>
						</thead>
						<tbody>
							{% for livre in livres|reverse %}
								<tr>
									<td class="photoListeLivres"><img class="responsive-img" src="{{ livre.image }}"></td>
									<td>{{ livre.title }}</td>
									<td>{{ livre.auteur }}</td>
									<td>{{ livre.dateAjout|date('d/m/Y') }}</td>
									<td>{{ livre.isbn }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
					{# PLUGIN DATATABLE POUR LA PAGINATION #}
					<script>
						$(document).ready(function() {
						$('#myTable').DataTable( {
						"language": {
						"decimal": ",",
						"thousands": "."
						}
						} );
						} );
					</script>
				</div>{# COL #}
			</div>{# ROW #}
		</div>{# CONTAINER #}
	{% endblock %}