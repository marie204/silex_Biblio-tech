{% extends "layout.html.twig" %}

{% block content %}
<div class="main">
<article class="slider">
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="../img/slider_img/picture1.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="../img/slider_img/picture2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="../img/slider_img/picture3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
</article>
</div>
<div class="global">
<section class="bienvenue">
<div class="container">
    <div class="row">
        <article class="col-lg-12 col-md-12 col-sm-12">
            <h2>PLONGEZ DANS LE MONDE MERVEILLEUX DE LA LECTURE</h2>
        </article>
    </div>
</div>
</section>
<section class="popularBox">
<div class="container">
    <div class="row">
        <article class="col-lg-12 col-md-12 col-sm-12 banner-box">
            <h3>Les plus populaires</h3>
            <div class="row">
                {% for pLivre in popuLivre %}
                <article class="col-lg-3 col-md-4 col-sm-4 col-xs-6">
                    <div class="thumb-pad maxheight1"><div class="box_inner">
                        <div class="thumbnail">
                            <figure><a href="./livre?id={{pLivre.id}}"><img src="{{pLivre.image}}" alt=""></a></figure>
                            <div class="caption">
                                <a href="./livre?id={{pLivre.id}}">{{pLivre.title}}</a>
                                <p class="title">{{pLivre.auteur}}</p>
                            </div>
                        </div>
                    </div></div>
                </article>
                {% endfor %}
                
            </div>
        </article>
    </div>
</div>
</section>
<section class="circleIconBox">
<div class="container">
    <div class="row">
        <h3>Les derni√®res critiqueS</h3>
        {% for comment in lastComs %}
        <article class="col-lg-3 col-md-6 col-sm-6">
            <div class="thumb-pad1 maxheight">
                <div class="box_inner">
                    <div class="thumbnail">
                        <h2> {{comment.utilisateur.pseudo}} </h2>
                        <div class="caption">
                            <p>{{comment.description}}</p>
                            <a href="./livre?id={{comment.livre.id}}" class="btn-default btn1">Lire plus</a>
                        </div>
                    </div>
                </div>
            </div>
        </article>
        {% endfor %}
        
    </div>
</div>
</section>
</div>
{% endblock %}
